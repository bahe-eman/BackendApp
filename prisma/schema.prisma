// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Level{
  idLevel Int @id @default(autoincrement())
  nameLevel String
  message String
  user User[]
}
model Status{
  idStatus Int @id @default(autoincrement())
  nameStatus String
  user User[]
}
model User{
  idUser Int @id @default(autoincrement())
  nameUser String
  emailUser String
  passwordUser String
  tlpUser String
  addressUser String
  user   Level @relation(fields: [levelUser], references: [idLevel])
  levelUser Int 
  suser   Status @relation(fields: [statusUser], references: [idStatus])
  statusUser Int 
  lastLoginin DateTime
  lastLigout DateTime
  fotoUser String
}

model Transaction {
  idTransaction Int @id @default(autoincrement())
  customerId Int
  roomId Int
  statusTransaction Int
  checkIn DateTime
  checkOut DateTime
  day Int
  people Int
  booking DateTime
  statusPayment Int
  totalPayment Int
}